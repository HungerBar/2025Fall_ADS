% 定义PseudoCode命令，参数：1-标题，2-输入，3-输出，4-代码内容
\newcommand{\PseudoCode}[4]{
\begin{center}
\begin{tcolorbox}[
  colback=white,        % 白色背景
  colframe=black,       % 黑色边框
  width=14cm,           % 宽度
  arc=0.5mm,            % 轻微圆角
  boxrule=0.5pt,        % 细边框
  top=1em, 
  bottom=1em, 
  left=1em, 
  right=1em,
  fontupper=\ttfamily,  % 代码使用等宽字体
  before upper={\parindent0pt\raggedright} % 取消缩进并左对齐
]
  % 标题：居中、加粗、大号字体
  \centering\bfseries\large #1 \par
  \vspace{0.8em}
  
  % 输入输出说明（左对齐）
  \raggedright
  \textbf{Input:} #2 \par
  \textbf{Output:} #3 \par
  \vspace{0.5em}
  
  % 分隔线
  \hrule
  \vspace{0.5em}
  
  % 代码内容（左顶格对齐）
  #4
\end{tcolorbox}
\end{center}
}
